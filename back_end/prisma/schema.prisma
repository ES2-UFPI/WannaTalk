generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id    Int    @id @default(autoincrement())
  name String
  code String @unique
}

model Context {
  id    Int    @id @default(autoincrement())
  name String
  code String @unique
  description String
}

model Script {
  id          Int       @id @default(autoincrement())
  title       String
  summary     String
  difficulty  Difficulty @relation(fields: [difficultyId], references: [id])
  gender      Gender     @relation(fields: [genderId], references: [id])
  notes       String?
  refs        String?
  language    Language   @relation(fields: [languageId], references: [id])
  dialogues    String @default(" ")
  avaliation  Int @default(0)
  
  difficultyId  Int
  genderId      Int
  languageId    Int
}

model Difficulty {
  id      Int      @id @default(autoincrement())
  name    String
  scripts Script[]
}

model Gender {
  id      Int      @id @default(autoincrement())
  name    String
  image   String
  scripts Script[]
}

model Language {
  id      Int      @id @default(autoincrement())
  name    String
  scripts Script[]
}


model User {
  id    Int    @id @default(autoincrement())
  email String  @unique
  name  String
  username String @unique
  hashcode String

}
